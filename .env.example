# Kurachi AI Environment Configuration
# Copy this file to .env and customize as needed

# Core Application Settings
KURACHI_ENV=development
LOG_LEVEL=INFO
DEBUG=false

# Database Configuration
DATABASE_PATH=kurachi.db
CHROMA_PERSIST_DIR=./chroma_db

# AI Model Configuration
LLM_MODEL=qwen3:4b
VISION_MODEL=llava:7b
EMBEDDING_MODEL=qwen3:4b
OLLAMA_BASE_URL=http://localhost:11434
WHISPER_MODEL=base

# Optional Features (set to 0 to disable)
ENABLE_NEO4J=0
ENABLE_SPACY=1
ENABLE_OCR=1
ENABLE_AUDIO_TRANSCRIPTION=1
ENABLE_VIDEO_PROCESSING=1

# Neo4j Configuration (only if ENABLE_NEO4J=1)
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=password
NEO4J_DATABASE=kurachi

# OCR Configuration
OCR_LANGUAGES=eng+jpn
TESSERACT_CMD=tesseract

# Performance and Monitoring
ENABLE_PERFORMANCE_MONITORING=1
ENABLE_AUDIT_LOGGING=1
METRICS_COLLECTION=1
VALIDATION_TIMEOUT=120

# File Processing Limits
MAX_FILE_SIZE_MB=100
MAX_UPLOAD_FILES=10

# Security Settings
SECRET_KEY=change-this-in-production
SESSION_TIMEOUT_HOURS=24
MAX_LOGIN_ATTEMPTS=5